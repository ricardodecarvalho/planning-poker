rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    function isAppChecked() {
      // Temporariamente retornando true para depurar falha em produção
      // return request.appCheckToken != null;
      return true;
    }

    match /users/{userId}/{allPaths=**} {
      allow read: if request.auth != null && isAppChecked();
      allow write: if request.auth != null && request.auth.uid == userId && isAppChecked();
    }

    match /rooms/{roomId}/{allPaths=**} {
      allow read: if request.auth != null && isAppChecked();
      allow write: if request.auth != null && isAppChecked();
    }

    match /public/{allPaths=**} {
      allow read: if isAppChecked();
      allow write: if request.auth != null && isAppChecked();
    }

    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}